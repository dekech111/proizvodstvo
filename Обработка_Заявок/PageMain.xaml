<Page x:Class="Обработка_Заявок.Work.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Обработка_Заявок.Work"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Главное меню">

    <Grid >
        <StackPanel HorizontalAlignment="Center"
                        Height="158" 
                        VerticalAlignment="Center"
                        Width="276">
            <Label Content="Выбор действия" 
                   HorizontalAlignment="Center" FontSize="20"/>
            <Button HorizontalAlignment="Left" 
                        Content="Добавление Заявки"
                        Height="47"
                        Width="276"
                        FontSize="16"
                        x:Name="btnAddZakaz" Click="btnAddZakaz_Click"/>
            <Button HorizontalAlignment="Left"
                        Content="Просмотр информации"
                        Height="47" 
                        Width="276"
                        Margin="0,10,0,0" 
                        FontSize="16"
                        x:Name="btnView" Click="btnView_Click"/>

        </StackPanel>
    </Grid>
</Page>
